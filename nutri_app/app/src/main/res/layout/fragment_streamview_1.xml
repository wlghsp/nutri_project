<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:background="@color/cardview_shadow_start_color">

        <Button
            android:id="@+id/stream1Back"
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/tvitem"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="@string/menu_streamView"
            android:textColor="#000000"
            android:textSize="15dp" />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvSt1Regdate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="TextView"
                    android:textSize="15sp"
                    android:textColor="#A9A9A9"/>

                <TextView
                    android:id="@+id/tvSt1Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20sp"
                    android:text="TextView"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <kr.co.prnd.YouTubePlayerView
                    android:id="@+id/you_tube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fragment="com.example.my33_navigationdrawer.FragmentStreamView1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>