<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Button
        android:id="@+id/btnLoginBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnLoginBack"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLoginBack"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/etLoginEmail"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLoginBack"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textSize="15dp"
        android:hint="이메일 입력"
        >
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/etLoginPasswd"
        android:layout_width="320sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLoginBack"
        android:layout_marginTop="135dp"
        android:textStyle="bold"
        android:maxLines="1"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:textSize="15dp"
        android:hint="비밀번호"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 잊어버리셧나요?"
        android:layout_alignLeft="@+id/etLoginEmail"
        android:layout_below="@+id/btnLoginBack"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="12sp"
        />

    <Button
        android:id="@+id/btnFindPasswd"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/etLoginPasswd"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="10dp"
        android:background="#00ff0000"
        android:text="비밀번호 재설정"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnLoginOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:textSize="20sp"
        android:text="로그인" />





</RelativeLayout>